<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#222222"
    android:orientation="vertical"

    android:id="@+id/buttons_layout"
    tools:ignore="MissingConstraints">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_weight="1"

>
    <TextView
        android:id="@+id/answerText"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:textSize="36dp"
        android:textAlignment="textEnd"
        android:text=""/>
    <TextView
        android:id="@+id/solutionText"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#aaaabb"
        android:layout_weight="1"
        android:textSize="34dp"
        android:textAlignment="textEnd"
        android:text=""/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <Button
            android:id="@+id/OP_Br"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="20dp"
            android:layout_margin="12dp"
            android:text="("


            />
        <Button
            android:id="@+id/Cl_Br"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:textSize="20dp"
            android:layout_margin="12dp"
            android:text=")"

            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"

            android:textSize="13dp"

            android:layout_margin="12dp"
            android:id="@+id/root"
            android:text="sqrt"
            android:onClick="sqrt"

            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"

            android:textSize="15dp"

            android:layout_margin="12dp"
            android:id="@+id/cos"
            android:text="cos"
            android:onClick="Cos"

            />



    </LinearLayout>
    <!--first line  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        >

        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="#aa3636"
            android:layout_margin="12dp"
            android:id="@+id/buttonC"
            android:text="C"
            android:onClick="Clear"

            />

        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="13dp"

            android:layout_margin="12dp"
            android:id="@+id/log"
            android:text="Log"
            android:onClick="log"


            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"

            android:textSize="17dp"

            android:layout_margin="12dp"
            android:id="@+id/Sin"
            android:text="sin"
            android:onClick="sin"

            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="#00aa00"
            android:layout_margin="12dp"
            android:id="@+id/button_div"

            android:text="/"
            android:onClick="operator"

            />


    </LinearLayout>
    <!--second line  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/button7"
            android:text="7"
            android:onClick="numberButton"



            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/button8"
            android:text="8"
            android:onClick="numberButton"
            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/button9"
            android:text="9"
            android:onClick="numberButton"

            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="#00aa00"
            android:layout_margin="12dp"
            android:id="@+id/button_mult"

            android:text="*"
            android:onClick="operator"

            />


    </LinearLayout>
    <!--third line  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/button4"
            android:text="4"
            android:onClick="numberButton"

            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/button5"
            android:text="5"
            android:onClick="numberButton"
            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/button6"
            android:text="6"
            android:onClick="numberButton"
            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="#00aa00"
            android:layout_margin="12dp"
            android:id="@+id/button_plus"

            android:text="+"
            android:onClick="operator"

            />


    </LinearLayout>
    <!--fourth line  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button

            android:id="@+id/button1"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="36dp"
            android:onClick="numberButton"
            />

        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/button2"
            android:text="2"
            android:onClick="numberButton"

            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/button3"
            android:text="3"
            android:onClick="numberButton"
            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="#00aa00"
            android:layout_margin="12dp"
            android:id="@+id/button_minus"

            android:text="-"
            android:onClick="operator"

            />


    </LinearLayout>
    <!--fifth line  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/button_Ac"
            android:text="AC"
            android:onClick="allClear"

            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/button0"
            android:text="0"
            android:onClick="numberButton0"

            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:id="@+id/button_dot"
            android:text="."
            android:onClick="dotButton"

            />
        <Button

            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:textSize="32dp"
            android:textColor="#00aa00"
            android:layout_margin="12dp"
            android:id="@+id/button_equal"

            android:text="="
            android:onClick="equal"

            />


    </LinearLayout>




</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>